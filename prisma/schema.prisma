// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}


enum Role {
  admin
  user
}

model User{
 id             String @id @default(uuid())
 name           String 
 email          String @unique
 emailVerified  Boolean? @default(false)
 password       String
 role           Role    @default(user)
 image          String?
 Contact        Contact[]
}

model Contact{
  contactId     String @id @default(uuid())
  firstName     String
  lastName      String
  email         String
  phone         String 
  role          String
  company       String?
  notes         String?
  avatar        String?
  user           User     @relation(fields: [userId], references: [id])
  userId        String
}