{
  "name": "jobhuntly-backend",
  "version": "1.0.0",
  "description": "back-end for jobhuntly web app",
  "main": "index.js",
  "scripts": {
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "npm run prisma:migrate:test && jest",
    "test:watch": "npm run prisma:migrate:test && jest --watch",
    "test:coverage": "npm run prisma:migrate:test && jest --coverage",
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js"
  },
  "author": "Joel Hernandez",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.3",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.6.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@types/express": "^4.17.21",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7"
  }
}
